<!-- views/login.handlebars -->
<div class="row mt-5">
  <div class="col-md-6 m-auto">
    <div class="card card-body">
      <h1 class="text-center mb-3">註冊</h1>
      <form action="/users/register" method="POST">
        <div class="form-group">
          <label for="name">姓名</label>
          <input type="text" id="name" name="name" class="form-control" placeholder="輸入姓名" value="{{{name}}}">
        </div>
        <div class="form-group">
          <label for="email">Email</label>
          <input type="email" id="email" name="email" class="form-control" placeholder="輸入 Email" value="{{{email}}}">
        </div>
        <div class="form-group">
          <label for="password">密碼</label>
          <input type="password" id="password" name="password" class="form-control" placeholder="建立密碼" value="{{{password}}}">
        </div>
        <div class="form-group">
          <label for="password2">確認密碼</label>
          <input type="password" id="password2" name="password2" class="form-control" placeholder="確認密碼" value="{{{password2}}}">
        </div>
        <button type="submit" class="btn btn-primary btn-block">註冊</button>
      </form>
      <p class="lead mt-4">
        已經有帳號? <a href="/users/login">登入</a>
      </p>
    </div>
  </div>
</div>